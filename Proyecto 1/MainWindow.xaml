                   Grid.Column="3"
                   Text="Thursday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
                <TextBlock x:Name="FridayMonthTextBlock" 
                   Grid.Column="4"
                   Text="Friday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
                <TextBlock x:Name="SaturdayMonthTextBlock" 
                   Grid.Column="5"
                   Text="Saturday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
                <TextBlock x:Name="SundayMonthTextBlock" 
                   Grid.Column="6"
                   Text="Sunday" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="White" FontSize="18" FontFamily="Berlin Sans FB Demi"/>
            </Grid>
            <Grid x:Name="DaysOfMonthCalendarGrid" 
              Grid.Row="1" 
              Background="White"
              Visibility="Visible"
              ShowGridLines="True">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="AliceBlue"
                    Grid.RowSpan="7"
                    Grid.Column="6"/>
                <Border Background="AliceBlue"
                    Grid.RowSpan="7"
                    Grid.Column="5"/>



            </Grid>
        </Grid>

