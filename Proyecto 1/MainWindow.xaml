        <Grid x:Name="AppointmentContainerGrid"
              Background="White"
              Grid.Row="1" Visibility="Hidden"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="AppointmentTittleGrid"
                Grid.Row="0"
                  Background="Aqua">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Btn_CreateApointment"
                    VerticalAlignment="Center"  HorizontalAlignment="Center"
                    Grid.Row="0" Grid.Column="0"
                    FontSize="16" FontFamily="Berlin Sans FB Demi" 
                    IsCancel="True"  Content="Create Appointment" Click="CreateAppointmentButton_Click"  Height="56"/>
                <TextBlock 
                   Grid.Row="0" Grid.Column="1"
                   Text="Appointment &#xa; Managment" 
                   VerticalAlignment="Top" HorizontalAlignment="Center" 
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" FontWeight="Normal" />
                <Button x:Name="Btn_EditAppointment"
                    VerticalAlignment="Center"  HorizontalAlignment="Center"
                    Grid.Row="0" Grid.Column="2"
                    FontSize="16" FontFamily="Berlin Sans FB Demi" 
                    IsCancel="True"  Content="Edit Appointments" Click="EditAppointmentsButton_Click" Height="56" />
            </Grid>

            <Grid x:Name="AppointmentFormGrid"
                Grid.Row="1" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock 
                   Grid.Row="0" Grid.Column="0"
                   Text="Title:" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" 
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" FontWeight="Normal" />
                <TextBox x:Name="TB_TitleAppointment"
                   Grid.Row="0" Grid.Column="1"
                   Text="" 
                   VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                   Foreground="Black" FontSize="36" FontFamily="Berlin Sans FB Demi" FontWeight="Normal" />
                <TextBlock 
                   Grid.Row="1" Grid.Column="0"
                   Text="Date:" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" 
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" FontWeight="Normal" />
                <DatePicker x:Name="DatePicker_DateAppointment"
                   Grid.Row="1" Grid.Column="1"
                   Text="" 
                   VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                   Foreground="Black" FontSize="36" FontFamily="Berlin Sans FB Demi" FontWeight="Normal" />
                <TextBlock 
                   Grid.Row="2" Grid.Column="0"
                   Text="StartTime:" 
                   VerticalAlignment="Center" HorizontalAlignment="Right" 
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" FontWeight="Normal" />
