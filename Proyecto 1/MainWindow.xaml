<Window x:Class="Proyecto_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="using:Microsoft.UI.Xaml.Controls"
        xmlns:local="clr-namespace:Proyecto_1" 
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">


    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="185*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="LoginGrid"
              Grid.Row="1" Visibility="Visible"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock 
                   Text="Account Login" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Grid.Row="0"
                   Foreground="SteelBlue" FontSize="72" FontFamily="Berlin Sans FB Demi" />
            <TextBox x:Name="TB_Email"
                   Grid.Row="1"
                   Text="" 
                   VerticalAlignment="Top" HorizontalAlignment="Stretch" 
                   Foreground="Black" FontSize="36" FontFamily="Berlin Sans FB Demi" FontWeight="Normal" />
            <TextBlock  x:Name="LoginFeedback_Text"
                   Text="" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Grid.Row="1"
                   FontSize="36" FontFamily="Berlin Sans FB Demi" />
            <Button 
                   Content=" Login " VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                   Grid.Row="1"
                   Foreground="White" FontSize="48" FontFamily="Berlin Sans FB Demi" Background="SteelBlue" Click="LoginButton_Click" />
        </Grid>

        <Grid x:Name="NavigationGrid"
              Grid.Row="0" Visibility="Hidden"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="EmailTextBlock" 
                   Text="Email" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Grid.Column="0"
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" />
            <TextBlock x:Name="MonthTextBlock" 
                   Text="Month " VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Grid.Column="1"
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" />
            <TextBlock x:Name="YearTextBlock" 
                   Text="Year" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Grid.Column="2"
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" />
            <TextBlock x:Name="ViewModeTextBlock" 
                   Text="View Mode" VerticalAlignment="Top" HorizontalAlignment="Center" 
                   Grid.Column="3"
                   Foreground="SteelBlue" FontSize="36" FontFamily="Berlin Sans FB Demi" />
            <ComboBox Name="CB_Mode"
                      Grid.Column="3" 
                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                      SelectedIndex="0" SelectionChanged="ChangeViewModComboBox" FontSize="22" DropDownClosed="CloseDropdownViewComboBox">
                <ComboBoxItem Tag="Months" x:Name="Months" 
                    Content="Months">
                </ComboBoxItem>
                <ComboBoxItem Content="Weeks">
                </ComboBoxItem>
            </ComboBox>
            <Button Content="&lt;"
                VerticalAlignment="Center"  HorizontalAlignment="Left"
                Grid.Column="4"  
                FontSize="72" FontFamily="Berlin Sans FB Demi" 
                IsCancel="True" Click="MoveBackwardButton_Click" />
            <Button
                x:Name="Btn_AppointmentManagment"
                VerticalAlignment="Center"  HorizontalAlignment="Center"
                Grid.Column="4"  
                Content="Appointment &#xa; Managment"
                FontSize="16" FontFamily="Berlin Sans FB Demi" 
                IsCancel="True" Click="AppointmentManagmentButton_Click">
            </Button>
            <Button Content="&gt;"
                Grid.Column="4" 
                VerticalAlignment="Center"  HorizontalAlignment="Right"
                FontSize="72" FontFamily="Berlin Sans FB Demi"
                IsCancel="True" Click="MoveForwardButton_Click" />

        </Grid>

        <Grid x:Name="MonthCalendarGrid"
              Grid.Row="1" Visibility="Hidden">
